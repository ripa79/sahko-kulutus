body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #111217;
    color: #d8d9da;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

nav {
    background: #181b1f;
    padding: 10px 20px;
    border-radius: 4px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 20px;
}

nav a {
    color: #d8d9da;
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 3px;
}

nav a:hover {
    background: #202226;
}

nav a.active {
    background: #202226;
    color: #3274D9;
}

#updateData {
    margin-left: auto;
    background: #3274D9;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 3px;
    cursor: pointer;
}

#updateData:hover {
    background: #1F60C4;
}

#updateData:disabled {
    background: #4a4a4a;
    cursor: not-allowed;
}

main {
    padding: 20px;
    background: #181b1f;
    border-radius: 4px;
}

h1, h2, h3 {
    margin-top: 0;
    color: #d8d9da;
}

.chart-container {
    width: 100%;
    height: 400px;
    margin: 20px 0;
}

.metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.metric-card {
    background: #202226;
    padding: 20px;
    border-radius: 4px;
    text-align: center;
}

.metric-card h3 {
    margin: 0;
    font-size: 14px;
    color: #d8d9da;
    opacity: 0.7;
}

.metric-card h2 {
    margin: 10px 0;
    font-size: 24px;
    color: #3274D9;
}

.metric-card small {
    color: #d8d9da;
    opacity: 0.7;
}

.summary-section {
    background: #202226;
    padding: 20px;
    border-radius: 4px;
    margin-bottom: 20px;
}

.summary-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

.summary-table th,
.summary-table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #2c3235;
}

.summary-table th {
    background: #181b1f;
    font-weight: 500;
}

.summary-table tr:hover {
    background: #1a1c22;
}

.highlight {
    color: #73BF69;
    font-weight: 500;
}

.savings-card {
    background: #1a1c22;
    padding: 20px;
    border-radius: 4px;
    border-left: 4px solid #73BF69;
    margin-top: 20px;
}

.trend-up {
    color: #E02F44;
}

.trend-down {
    color: #73BF69;
}

#loading {
    text-align: center;
    padding: 20px;
    font-size: 16px;
    color: #d8d9da;
}

#error {
    background: #E02F44;
    color: white;
    padding: 20px;
    border-radius: 4px;
    margin-bottom: 20px;
}
